    <script>
        let firstName;
        let lastName;
        let emailAddress;
        let mobileNumber;
        let gender;
        let favColor;
        let DOB;
        let checkBox;

        document.getElementById("inputGender").addEventListener("click", function () {
            document.getElementById("popupGenderID").style.display = "inherit";
        });

        document.getElementById("buttonMale").addEventListener("click", function () {
            document.getElementById("popupGenderID").style.display = "none";
            document.getElementById("inputGender").innerHTML = "Male";
        });

        document.getElementById("buttonFemale").addEventListener("click", function () {
            document.getElementById("popupGenderID").style.display = "none";
            document.getElementById("inputGender").innerHTML = "Female";
        });

        document.getElementById("buttonOther").addEventListener("click", function () {
            document.getElementById("popupGenderID").style.display = "none";
            document.getElementById("inputGender").innerHTML = "Other";
        });

        document.getElementById("buttonSubmit").addEventListener("click", function () {
            var ed = true;
            firstName = document.getElementById("inputFN").value;
            lastName = document.getElementById("inputLN").value;
            emailAddress = document.getElementById("inputEmail").value;
            mobileNumber = document.getElementById("inputNumber").value;
            gender = document.getElementById("inputGender").innerHTML;
            DOB = document.getElementById("inputDate").value;

            if (firstName == "" || lastName == "" || emailAddress == "" || mobileNumber < 1000000000 || mobileNumber > 9999999999 || mobileNumber == "" || gender == "Select" || DOB == "" || document.getElementById("checkboxChecked").checked == false) {
                document.getElementById("endPhraseID").innerHTML = "Invalid Inputs."
            }

            else {
                document.getElementById("endPhraseID").innerHTML = "Valid Inputs, user registered."
            }
        });

    </script>
