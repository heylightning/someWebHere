<body>
    <div class="headerTxt">
        Welcome to JavaScript - <i class="todoTxt">ToDo</i>
        <p class="headerCaption">
            This is the first project in the chatGPT recommended list. The Prompt says <i class="todoTxt"
                style="font-size: 10px;">Todo List - Create a simple todo list application that allows users to add,
                edit, and delete items.</i>
        </p>
    </div>
    <div class="middleInputSection">
        <input class="inputField" type="text" id="addTaskElementInput" placeholder="What's happening? Add a ToDo.">
        <button id="addBTN" class="addBTN" onclick="addingTaskFunction()">Add Task</button>
    </div>
    <div class="endSection">
        <p class="showingList" id="listPreview">
        </p>
    </div>
    <script>
        var myArray = [];
        var tryingTxt = "";
        function addingTaskFunction() {
            tryingTxt = ""
            var taskValue = document.getElementById("addTaskElementInput").value;
            if(taskValue != "") {
                myArray.push(taskValue);
                for(var i = 0; i < myArray.length; i++) {
                    tryingTxt = tryingTxt + "<br><br>" + myArray[i];
                }

                document.getElementById("listPreview").innerHTML = tryingTxt;
            }
            else {
                window.alert("Add task field cannot be empty.")
            }

            document.getElementById("addTaskElementInput").value = null;
        }
    </script>
