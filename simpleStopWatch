<body>

    <div class="header">
        <p>
            JavaScript - <span class="headerStyle">
                Stopwatch
            </span>
        </p>
    </div>

    <div class="headerTxt">
        <p>
            This is another project created by the chatGPT series that says - <span class="headerTxtStyle">
                Stopwatch - Create a stopwatch application that can start, stop, and reset the timer.
            </span>
        </p>
    </div>

    <div class="middleSection">
        <p class="txtStyle" id="mainTxt">
            0 hr 0 min 0 sec 0 millisec
        </p>
        <button class="btnStyle" id="buttonStartClock">
            Start
        </button>
        <button class="btnStyle" id="buttonStopClock">
            Stop
        </button>
        <button class="btnStyle" id="buttonResetClock">
            Reset
        </button>
    </div>

    <div class="footer" id="footerAlert">

    </div>

    <script>
        var milliIteration = 0;
        var iteration = 0;
        var stopClock = false;
        var myVar;
        var inRunning = false;
        var minIteration = 0;
        var hrIteration = 0;

        function tryClock() {
            if (iteration == 59) {
                minIteration = minIteration + 1;
                document.getElementById("mainTxt").innerHTML = "0 hr " + minIteration + " min " + iteration + " sec";
                iteration = 0;
            }
            if (minIteration == 60) {
                hrIteration = hrIteration + 1;
                document.getElementById("mainTxt").innerHTML = hrIteration + " hr " + minIteration + " min " + iteration + " sec";
                minIteration = 0;
            }

            if(milliIteration == 100) {
                iteration = iteration + 1;
                document.getElementById("mainTxt").innerHTML = hrIteration + " hr " + minIteration + " min " + iteration + " sec " + milliIteration + " millisec";
                milliIteration = 0;
            }
            inRunning = true;
            milliIteration = milliIteration + 1;
            myVar = setTimeout(tryClock, 7.6);
            document.getElementById("mainTxt").innerHTML = hrIteration + " hr " + minIteration + " min " + iteration + " sec " + milliIteration + " millisec";
        }


        document.getElementById("buttonStartClock").addEventListener("click", function () {
            if (inRunning == false) {
                document.getElementById("footerAlert").innerHTML = "Clock is started."
                tryClock();
            }
        });

        document.getElementById("buttonStopClock").addEventListener("click", function () {
            clearTimeout(myVar);
            inRunning = false;
            document.getElementById("footerAlert").innerHTML = "Clock is stopped."
        });

        document.getElementById("buttonResetClock").addEventListener("click", function () {
            clearTimeout(myVar);
            inRunning = false;
            document.getElementById("mainTxt").innerHTML = "0 hr 0 min 0 sec 0 millisec";
            document.getElementById("footerAlert").innerHTML = "Clock is reset."
            milliIteration =  iteration = minIteration = hrIteration = 0;
        }); 
    </script>
