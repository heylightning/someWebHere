    }

    .headerTxt {
        font-size: 13px;
        text-align: center;
        margin-top: 10px;
    }

    .headerTxtStyle {
        font-size: 11px;
        color: cadetblue;
        transition: .2s;
    }

    .headerTxtStyle:hover {
        color: black;
    }

    .middleSection {
        margin: 20px;
        margin-top: 50px;
