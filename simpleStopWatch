        margin-right: 10px;
    }

    .btnStyle {
        width: 15%;
        height: 7%;
        margin-right: 10px;
        background-color: cadetblue;
        border: 1px solid black;
        color: white;
        border-radius: 20px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        cursor: pointer;
        transition: .2s;
    }

    .btnStyle:hover {
        color: cadetblue;
