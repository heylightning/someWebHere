    <script>
        var userAttack;
        var compAttack;
        var attack = ["stone", "paper", "scissor"];

        document.getElementById("imageStone").addEventListener("click", function () {
            userAttack = "stone";
            console.log("user: " + userAttack);
            compAttack = attack[Math.trunc(Math.random() * attack.length)];
            console.log("computer: " + compAttack);

            document.getElementById("userImage").src = "fist.png";

            if (compAttack == "stone") {
                document.getElementById("compImage").src = "fist.png";
            }
            else if (compAttack == "paper") {
                document.getElementById("compImage").src = "paper.png";
            }
            else {
                document.getElementById("compImage").src = "scissor.png";
            }

            if (userAttack == compAttack) {
                document.getElementById("paraResult").innerHTML = "Same Results."
            }

            else if (compAttack == "paper") {
                document.getElementById("paraResult").innerHTML = "Computer Won."
            }
            else {
                document.getElementById("paraResult").innerHTML = "You Won."
            }


        });

        document.getElementById("imagePaper").addEventListener("click", function () {
            userAttack = "paper";
            console.log("user: ", userAttack);
            compAttack = attack[Math.trunc(Math.random() * attack.length)];
            console.log("computer: " + compAttack);

            document.getElementById("userImage").src = "paper.png";

            if (compAttack == "stone") {
                document.getElementById("compImage").src = "fist.png";
            }
            else if (compAttack == "paper") {
                document.getElementById("compImage").src = "paper.png";
            }
            else {
                document.getElementById("compImage").src = "scissor.png";
            }

            if (userAttack == compAttack) {
                document.getElementById("paraResult").innerHTML = "Same Results."
            }

            else if (compAttack == "scissor") {
                document.getElementById("paraResult").innerHTML = "Computer Won."
            }
            else {
                document.getElementById("paraResult").innerHTML = "You Won."
            }

        });

        document.getElementById("imageScissor").addEventListener("click", function () {
            userAttack = "scissor";
            console.log("user: ", userAttack);
            compAttack = attack[Math.trunc(Math.random() * attack.length)];
            console.log("computer: " + compAttack);

            document.getElementById("userImage").src = "scissor.png";

            if (compAttack == "stone") {
                document.getElementById("compImage").src = "fist.png";
            }
            else if (compAttack == "paper") {
                document.getElementById("compImage").src = "paper.png";
            }
            else {
                document.getElementById("compImage").src = "scissor.png";
            }

            if (userAttack == compAttack) {
                document.getElementById("paraResult").innerHTML = "Same Results."
            }

            else if (compAttack == "stone") {
                document.getElementById("paraResult").innerHTML = "Computer Won."
            }
            else {
                document.getElementById("paraResult").innerHTML = "You Won."
            }

        });
    </script>
